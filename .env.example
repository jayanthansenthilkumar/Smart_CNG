# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_APP=app.py
FLASK_ENV=development

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite:///instance/fuelexa.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/smart_cng

# Google Places API (Optional but recommended for better station data)
# Get your API key from: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=

# Email Notifications (Optional)
# For Gmail, enable "Less secure app access" or use App Password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Notifications via Twilio (Optional)
# Sign up at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase Cloud Messaging for Push Notifications (Optional)
# Get from: https://console.firebase.google.com/
FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=
FIREBASE_SENDER_ID=

# Application Settings
DEFAULT_SEARCH_RADIUS_KM=50
CACHE_TIMEOUT_MINUTES=60
MAX_STATIONS_PER_REQUEST=100

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_PUSH_NOTIFICATIONS=False
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_REALTIME_FETCHING=True
ENABLE_BOOKING_SYSTEM=True

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (Optional)
RATELIMIT_ENABLED=False
RATELIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/smart_cng.log

# External API Timeouts (seconds)
API_TIMEOUT=10
OVERPASS_TIMEOUT=30

# Price Alert Thresholds
PRICE_DROP_THRESHOLD_PERCENT=5
ALERT_CHECK_INTERVAL_HOURS=6
